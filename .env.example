# Yatzy Environment Variables
# Copy to .env and customize as needed

# --- Solver ---
# Root path for data/ directory (strategy tables, simulations)
YATZY_BASE_PATH=.

# Number of rayon threads for parallel computation (default: 8)
RAYON_NUM_THREADS=8

# --- Frontend ---
# Backend API URL (used by Vite dev server)
VITE_API_BASE_URL=http://localhost:9000

# --- Docker ---
# Backend API URL injected into frontend container at runtime
API_BASE_URL=http://localhost:9000

# Backend port
API_PORT=9000
